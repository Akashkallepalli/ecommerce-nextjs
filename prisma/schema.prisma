model Product {
  id          String   @id @default(cuid())
  name        String   @unique
  description String   @db.Text
  price       Float
  image       String?
  category    String
  stock       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  orderItems  OrderItem[]

  @@index([category])
  @@index([createdAt])
  @@map("products")
}
